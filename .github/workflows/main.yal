name Build Docker Image

on:
    push:
        branches: [ master ]
    pull_request:
        branches: [ master ]

jobs:
    build:
        runs-on: ubuntu-latest
        steps:
        - uses: actions/checkout@latest
        - name: Build & Push Image
          run: |
            echo "${{ secrets.DOCKERPW }}" | docker login -u "trackhe" --password-stdin
            docker image build -t trackhe/docker-vsftpd:latest .
            docker push trackhe/docker-vsftpd:latest